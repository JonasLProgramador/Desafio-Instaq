{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "strict": true,
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node", "mocha"] 
  },
  "include": ["src/**/*.ts", "test/**/*.ts"], 
  "exclude": ["node_modules"]
}
